# OpenAI Configuration
OPENAI_API_KEY=

# Database Configuration (local dev)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=historys

# Optional: Single DATABASE_URL (used in production providers)
# Example: postgres://user:password@host:5432/dbname
DATABASE_URL=

# Database options
# In production on Railway/Render set DB_SSL=true and DB_SYNCHRONIZE=false, DB_LOGGING=false
DB_SSL=false
DB_SYNCHRONIZE=true
DB_LOGGING=true

# JWT Configuration
JWT_SECRET=change_me
JWT_EXPIRES_IN=24h

# CORS
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,https://your-frontend.vercel.app

# Node
NODE_ENV=development
